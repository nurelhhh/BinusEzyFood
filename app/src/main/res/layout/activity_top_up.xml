<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".TopUpActivity">

    <TextView
        android:id="@+id/topupNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        tools:text="Nurel Harsya" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your balance"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/topupBalanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="Rp76.000" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Top Up Balance"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button5"
        android:layout_height="wrap_content"
        android:onClick="topUp20"
        android:layout_width="180dp"
        android:textSize="18sp"
        android:text="Rp 20.000" />

    <Button
        android:id="@+id/button6"
        android:layout_width="180dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:onClick="topUp50"
        android:text="Rp 50.000" />

    <Button
        android:id="@+id/button7"
        android:layout_width="180dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:onClick="topUp100"
        android:text="Rp 100.000" />
</LinearLayout>